{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file (cl)",
      "type": "shell",
      "command": "cl",
      "args": [
        "/Zi",
        "/EHsc",
        "${file}",
        "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
